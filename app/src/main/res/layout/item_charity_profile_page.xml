<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/constraint_border"
    android:backgroundTint="#ffffff"
    android:orientation="vertical">

    <!--<androidx.cardview.widget.CardView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <ImageView
        android:id="@+id/ivCPImage"
        android:layout_width="431dp"
        android:layout_height="210dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/charity_temp_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/charity_temp_profile" />

    <TextView
        android:id="@+id/tvCPname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:layout_marginEnd="16dp"
        android:linksClickable="true"
        android:text="Name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCPImage" />

    <TextView
        android:id="@+id/tvCPCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCPname" />

    <TextView
        android:id="@+id/tvCPCause"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Cause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCPCategory" />

    <TextView
        android:id="@+id/tvCPMission"
        android:layout_width="0dp"
        android:layout_height="205dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/constraint_border"
        android:paddingLeft="5dp"
        android:scrollbars="vertical"
        android:focusableInTouchMode="true"
        android:text="Mission"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#B0292222"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCPCause" />

    <ImageButton
        android:id="@+id/ibCPLike"
        android:layout_width="55dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:outlineAmbientShadowColor="#00181717"
        android:outlineSpotShadowColor="#00131111"
        android:paddingLeft="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCPMission"
        app:srcCompat="@drawable/ic_like_icon" />

    <TextView
        android:id="@+id/tvCPLikedNum"
        android:layout_width="44dp"
        android:layout_height="17dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/ibCPLike"
        app:layout_constraintTop_toTopOf="@+id/ibCPLike" />

    <ImageButton
        android:id="@+id/tvDonateNowProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#00E6E6FA"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_payment_40"
        android:text="Donate Now"
        android:textColor="@color/colorPrimary"
        android:tint="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ibCPLike" />

    <ImageButton
        android:id="@+id/ibComments"
        android:layout_width="32dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:background="#ffffff"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/ibCPLike"
        app:layout_constraintTop_toBottomOf="@+id/tvCPMission"
        app:srcCompat="@drawable/ufi_comment" />

    <TextView
        android:id="@+id/tvCommentsNum"
        android:layout_width="44dp"
        android:layout_height="17dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/ibComments"
        app:layout_constraintTop_toTopOf="@+id/ibComments" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="4dp"
        android:text="Donate Now"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvDonateNowProfile" />

    <ImageView
        android:id="@+id/ivcheckmarkprofile"
        android:layout_width="18dp"
        android:layout_height="14dp"
        app:layout_constraintStart_toEndOf="@+id/tvCPname"
        app:layout_constraintTop_toBottomOf="@+id/ivCPImage"
        app:srcCompat="@drawable/blue_check_mark" />

    <!--</androidx.cardview.widget.CardView>-->
</androidx.constraintlayout.widget.ConstraintLayout>