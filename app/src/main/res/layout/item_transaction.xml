<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/grid_margin"
    android:layout_marginTop="@dimen/cell_margin"
    android:layout_marginRight="@dimen/grid_margin"
    android:background="@drawable/constraint_border"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:longClickable="true"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="392dp"
                android:layout_height="123dp"
                android:orientation="vertical"
                card_view:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="3dp">

                <ImageView
                    android:id="@+id/ivDonor"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/ib_empty_heart"
                    android:layout_width="58dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="8dp"
                    android:background="#FFFFFF"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:srcCompat="@drawable/ic_vector_heart_stroke" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDonor"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="12dp"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="18sp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#00070707"
                android:backgroundTint="#2503A9F4"
                android:outlineAmbientShadowColor="#A103A9F4"
                android:outlineSpotShadowColor="#03A9F4"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#090808"
                android:textSize="20sp"
                card_view:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/tvCharity" />

            <ImageView
                android:id="@+id/ivFriend"
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:layout_alignParentStart="false"
                android:layout_alignParentBottom="false"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvCharity"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="76dp"
                android:text="TextView"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#5F5F5F"
                android:textSize="12sp"
                card_view:layout_constraintStart_toStartOf="@+id/linearLayout2"
                card_view:layout_constraintTop_toBottomOf="@+id/tvDonor" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
