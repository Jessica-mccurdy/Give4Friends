<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvRoot"
    android:layout_marginLeft="@dimen/grid_margin"
    android:layout_marginRight="@dimen/grid_margin"
    android:layout_marginTop="@dimen/cell_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCharity"
            android:layout_width="260dp"
            android:layout_height="33dp"
            android:text="TextView"
            card_view:layout_constraintBottom_toTopOf="@+id/tvMessage"
            card_view:layout_constraintEnd_toStartOf="@+id/ivFriend"
            card_view:layout_constraintStart_toEndOf="@+id/ivDonor"
            card_view:layout_constraintTop_toBottomOf="@+id/tvFriend" />

        <ImageView
            android:id="@+id/ivDonor"
            android:layout_width="71dp"
            android:layout_height="68dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="102dp"
            android:scaleType="centerCrop"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/tvDonor"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

        <ImageView
            android:id="@+id/ivFriend"
            android:layout_width="71dp"
            android:layout_height="68dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="81dp"
            android:scaleType="centerCrop"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/tvCharity"
            card_view:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/palette_height"
            android:layout_alignParentBottom="true"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-25dp"
            tools:layout_editor_absoluteY="-13dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/contact_text_size" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvFriend"
            android:layout_width="258dp"
            android:layout_height="29dp"
            android:text="TextView"
            card_view:layout_constraintBottom_toTopOf="@+id/tvCharity"
            card_view:layout_constraintEnd_toStartOf="@+id/ivFriend"
            card_view:layout_constraintStart_toEndOf="@+id/ivDonor"
            card_view:layout_constraintTop_toBottomOf="@+id/tvDonor" />

        <TextView
            android:id="@+id/tvDonor"
            android:layout_width="256dp"
            android:layout_height="30dp"
            android:text="TextView"
            card_view:layout_constraintBottom_toTopOf="@+id/tvFriend"
            card_view:layout_constraintEnd_toEndOf="@+id/tvFriend"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/ivDonor"
            card_view:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="256dp"
            android:layout_height="77dp"
            android:layout_marginStart="71dp"
            android:layout_marginEnd="76dp"
            android:text="TextView"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tvCharity" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
